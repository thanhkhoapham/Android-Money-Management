<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_gravity="center"
    android:elevation="10dp"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true">


    <TextView
        android:id="@+id/tv_MD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:paddingTop="8dp"
        android:paddingLeft="110dp"
        android:paddingBottom="8dp"
        android:background="#a5fea4a4"
        android:text="Tên loại"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/tv_EDC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="35dp"
        android:text="Edit text"
        android:textSize="15dp" />


    <ImageView
        android:id="@+id/iv_DeleteLoaiChi"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="top|right"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/background_of_date"

        card_view:srcCompat="@drawable/delete" />

    <ImageView
        android:id="@+id/iv_editLoaiChi"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="top|right"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="55dp"
        android:layout_weight="1"
        android:background="@drawable/background_of_date"
        card_view:srcCompat="@drawable/edit" />






</android.support.v7.widget.CardView>
