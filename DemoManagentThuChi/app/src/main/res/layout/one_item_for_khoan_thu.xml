<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_gravity="center"
    android:elevation="10dp"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true">


    <TextView
        android:id="@+id/tv_tenKhoanThu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Ten khoan thu"
        android:textColor="#fff"
        android:paddingTop="8dp"
        android:paddingLeft="105dp"
        android:paddingBottom="8dp"
        android:background="#a5fea4a4"
        android:textSize="17dp" />
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"

        android:text="Số tiền thu : "
        android:textSize="15dp" />


    <TextView
        android:id="@+id/tv_SoTienThu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="105dp"
        android:text="text"
        android:textSize="15dp" />


    <ImageView
        android:id="@+id/iv_DeleteKhoanThu"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="top|right"
        android:layout_marginTop="4dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="@drawable/background_of_date"
        card_view:srcCompat="@drawable/delete" />

    <ImageView
        android:id="@+id/iv_editKhoanThu"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="top|right"
        android:layout_marginRight="55dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:background="@drawable/background_of_date"
        card_view:srcCompat="@drawable/edit" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="95dp"
        android:layout_height="wrap_content"
        android:text="Ngày thu    :"
         />

    <TextView
        android:id="@+id/tv_ngayThu"
        android:layout_marginLeft="105dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="95dp"
        android:layout_gravity="top"

        android:layout_height="wrap_content"
        android:text="10/10/2018" />

    <TextView
        android:id="@+id/tv_LoaiThu"
        android:layout_width="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="105dp"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:text="text" />
    <TextView
        android:id="@+id/tv_viewLoaiThu"
        android:layout_width="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginTop="70dp"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:text="Loại thu      : " />




</android.support.v7.widget.CardView>
