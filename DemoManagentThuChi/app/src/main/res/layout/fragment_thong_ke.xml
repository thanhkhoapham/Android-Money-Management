<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".ThongKeFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Thống kê tổng khoản thu và khoản chi"
                android:textColor="#96000000"
                android:textSize="17sp" />

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:elevation="10dp"
                card_view:cardBackgroundColor="#fff"
                card_view:cardCornerRadius="5dp"
                card_view:cardUseCompatPadding="true">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechart"
                    android:layout_width="match_parent"
                    android:layout_margin="20dp"
                    android:layout_height="350dp">

                </com.github.mikephil.charting.charts.PieChart>

            </android.support.v7.widget.CardView>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="#70dad1" />
            <TextView
                android:id="@+id/tv_TongThu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tong thu"
                android:layout_marginLeft="5dp"
                android:textColor="#a0000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_TongChi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tong Chi"
                android:layout_marginLeft="5dp"
                android:textColor="#a0000000"
                android:textSize="14sp" />
                </LinearLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:background="#70dad1" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>